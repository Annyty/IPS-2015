<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="ProyectoBibliotecaPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>proyectobiblioteca.Comentario</class>
    <class>proyectobiblioteca.Tesis</class>
    <class>proyectobiblioteca.Calificacion</class>
    <class>proyectobiblioteca.Pais</class>
    <class>proyectobiblioteca.Autor</class>
    <class>proyectobiblioteca.Director</class>
    <class>proyectobiblioteca.Visitas</class>
    <class>proyectobiblioteca.Usuario</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:derby://localhost:1527/proyectoprueba"/>
      <property name="javax.persistence.jdbc.password" value="bd"/>
      <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.ClientDriver"/>
      <property name="javax.persistence.jdbc.user" value="bd"/>
    </properties>
  </persistence-unit>
</persistence>
